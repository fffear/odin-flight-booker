
<% if search_results %>
  <%= form_for(:booking, url: new_booking_url, method: 'get') do |f| %>
    <% search_results.each do |flight| %>
      <%= f.radio_button(:flight_id, flight.id) %>
      <%= f.label("flights_#{flight.id}".to_sym, flight.display_journey)  %>
    <% end %>

    <br>

    <%= f.hidden_field(:num_passengers, value: num_passengers)  %>

    <br>

    <% if search_results.any? %>
      <%= f.submit "Create Booking" %>
    <% end %>
  <% end %>
<% end %>